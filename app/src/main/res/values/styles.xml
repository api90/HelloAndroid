<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Scrollview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#1bc0bd</item>
    </style>

    <style name="RelativeLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ImageView1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageView2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_below">@id/udacity</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorLink">#424242</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:minWidth">180dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="FooterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/www</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#E0E0E0</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

</resources>
